@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


@if (!Model.Any())
{
    <p>Movie list is empty </p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Details")/@movie.Id">@movie.Name</a></td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }

        </tbody>



    </table>

}