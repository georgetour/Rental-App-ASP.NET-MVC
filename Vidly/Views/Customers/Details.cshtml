@model Vidly.Models.Customer

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    DateTime? formattingDate = Model.Birthdate;

}

<h2>@Model.Name</h2>

<ul>
    <li><h3>Membership Type :</h3>@Model.MembershipType.Membership</li>
    @{
        if (formattingDate != null)
        {
            <li><h3>Birthdate : </h3>@String.Format("{0:dd/MM/yyyy}", formattingDate)</li>
        }
    }
    
</ul>

